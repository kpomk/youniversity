<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
     <h2 class="panel-title"><%= @user.name %> さんのプロフィール
       <button class="btn btn-defalt" , >
         <%= link_to '新規記事の作成', new_article_path %>
       </button>
      </h2>
    </div>   
     
    <div class="panel-body">
        <div class="row">
            <ul>
              <li><label class="control-label">所属: <%= @user.belonging %></label></li>
              <li><label class="control-label">専門: <%= @user.major %></label></li>
              <li><label class="control-label">所属: <%= @user.publication %></label></li>
            </ul>
        </div>
       
        <% if current_user == @user %>
          <!--後で見る一覧 Start-->
          <% if @want_articles.present? %>
            <%= render 'articles', articles: @want_articles, linker_name: 'あとで見る一覧', linker: rankings_userwant_path %>
          <% end %>
          <!--後で見る一覧 おわり-->
           
          <!--いいね記事一覧 Start-->
          <% if @like_articles.present? %>
            <%= render 'articles', articles: @like_articles, linker_name: 'いいね記事一覧', linker: rankings_userlike_path %>
          <% end %>
          <!--いいね記事一覧 End-->
        <% end %>

        <%= render 'articles', articles: @articles, linker_name: "#{@user.name}の投稿記事一覧", linker: nil %>
    </div>
  </div> 
</div>
