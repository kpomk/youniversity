<div class="container">
  <div class="panel panel-default">
     <div class="panel-heading">
       <h2 class="panel-title"><%= @user.name %> さんのプロフィール
         <button class="btn btn-defalt" , >
           <%= link_to '新規記事の作成', new_article_path %>
         </button>
        </h2>
     </div>   
     
        <div class="panel-body"> 
            <div class="row">
                <ul>
                  <li><label class="control-label">所属: <%= @user.belonging %></label></li>
                  <li><label class="control-label">専門: <%= @user.major %></label></li>
                  <li><label class="control-label">所属: <%= @user.publication %></label></li>
                </ul>
            </div>
           
            
        
                   <% if current_user == @user %>    
                  <div class="content">
                       <% @articles.each do |article| %>
                        <% user = article.user %>
                        
                          <div class="column">
                            <div class="panel-heading text-center">
                              <%= image_tag(article.eyecatch,:size => "120x120",:class => "border-radius") %>
                            </div>
                              <div class="panel-body">
                               <p class="article-title"><%= link_to article.title, article %></p>
                              </div>
                          </div>
                       
                    <% end %>
                  </div>
                  <% end %>
                  
         </div>
    </div> 
</div>
   
 