<div class="row">
  <span>
    <h2>
      <% if linker.present? %>
        <%= link_to linker_name, linker %>
      <% else %>
        <%= linker_name %>
      <% end %>
    </h2>
  </span>
  <% articles.each do |article| %>
    <div class="col-md-3 col-sm-4 col-xs-6">  
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <%= image_tag(article.eyecatch,:size => "120x120",:class => "border-radius") %>
        </div>
        <div class="panel-body">
          <p class="article-title"><%= link_to article.title, article %></p>
           <%# <div class="buttons text-center">
              <%= render 'ownerships/want_button', article: @article %>
           <%# </div> %>
        </div>
      </div>
    </div>
  <% end %>
</div>
