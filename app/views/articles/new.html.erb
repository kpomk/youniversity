<div class="container">
  <div class= "row">
    <div class="panel panel-default">
        <h1 class="page-header">新規記事作成</h1>
          <%= form_for(@article) do |f| %>
             <% if @article.errors.any? %>
              <div id="error_explanation">
                <ul>
                    <% @article.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                </ul>
              </div>  
            <% end %>
      
        <form class="form-horizontal">
         <div class="form-group">
          　  <label class="col-sm-2" control-label>
                <%= f.label :title, 'タイトル' %>
             </label> 
                <%= f.text_field :title %>
              
          </div>
    
         <div class="form-group">
            <label class="col-sm-2" control-label>
                <%= f.label :keyword, 'キーワード' %>
            </label>  
                <%= f.text_field :keyword %>
         </div>
    
        <div class="form-group">
            <label class="col-sm-2" control-label>
                <%= f.label :category_id %>
            </label>
                <%= f.collection_select :category_id, Category.all, :id, :category_name, :prompt => true %>
        </div>
        
        <div class="form-group">
             <label class="col-sm-2" control-label>
                <%= f.label :eyecatch, '表示画像' %>
            </label>
                <%= f.file_field :eyecatch %>
                <%= f.hidden_field :eyecatch_cache %>
        </div>
        
        <div class="form-group">
             <label class="col-sm-3" control-label>
                 <%= f.label :slideshare_embed, 'シェアスライドembedコード' %>
             </label>
                 <%= f.text_field :slideshare_embed %>
        </div>
        
        <div class="form-group">
           <label class="col-sm-2" control-label>
                 <%= f.label :content, '本文' %>
           </label>
                 <%= f.text_area :content , class: 'form-control input-lg'  %>
        </div>
        
        <div class="form-group">
           <label class="col-sm-2" control-label>
                 <%= f.label :movie, '動画' %>
           </label>
                 <%= f.file_field :movie, :accept => 'video/*' %>
        </div>
    　　　
    　　<div class="form-group">
           <label class="col-sm-2" control-label>
                 <%= f.label :bibilography, '参考文献' %>
            </label>
                <%= f.text_area :bibilography, class: 'form-control' %>
        </div>
    
             <%= f.submit '投稿' %>
            <% end %>
            
            <%= link_to '一覧に戻る',root_path %>
    </div> 
 </div>
</div>
  