<h1><%= @article.title %>の編集ページ</h1>


<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>  
  <% end %>

  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :keyword, 'キーワード' %>
  <%= f.text_field :keyword %>
  
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :category_name, :prompt => true %>
  
  <%= f.label :eyecatch, '表示画像' %>
  <%= f.text_field :eyecatch %>
  
  <%= f.label :content, '内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :bibilography, '参考文献' %>
  <%= f.text_field :bibilography %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る',root_path %>